@model List<Category>

<h2 class="text-center mb-4">Category List</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-controller="Category" asp-action="Create" class="btn btn-success">Create New Category</a>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Category Name</th>
      <th scope="col">Category Description</th>

    </tr>
  </thead>
  <tbody>
      @foreach(var i in Model)
      {
    <tr class="table-active">
      <td>@i.CategoryName</td>
      <td>@i.CategoryDescription</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@i.CategoryId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@i.CategoryId" class="btn btn-sm btn-danger">Delete</a>
                </td>
    </tr>
      }
  </tbody>
</table>
@model List<Product>

@{
    ViewData["Title"] = "Product List";
}

<h2 class="text-center mb-4">Product List</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-controller="Product" asp-action="Create" class="btn btn-success">Create New Product</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Category</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Title</td>
                <td>@product.Description</td>
                <td>@product.Author</td>
                <td>@product.ISBN</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Category?.CategoryName</td>
                <td>
                    @if (product.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>
                <td>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.BookId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.BookId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
